<Application x:Class="Dieter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dieter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>        
         <LinearGradientBrush x:Key="ButtonBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF032C0B"/>
            <GradientStop Color="#FF00329E" Offset="0.7"/>
         </LinearGradientBrush>
        <Brush x:Key="ButtonBorder">#FF9CD18C</Brush>
        <Brush x:Key="Background">#FF3A87B4</Brush>
        <Brush x:Key="TitleBackground">#FF2C6291</Brush>
        <Brush x:Key="ListBoxBackground">#FFA4C3D4</Brush>
    </Application.Resources>
</Application>
